{
  "name": "beacon-launcher",
  "version": "1.0.3",
  "description": "Launcher for Beacon P2P Streaming Platform",
  "author": "Beacon Team",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaultkeeperirl-design/Beacon.git"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:react\" \"pnpm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "node build-launcher.js && vite build && electron-builder",
    "build:win": "node build-launcher.js && vite build && electron-builder --win",
    "build:linux": "node build-launcher.js && vite build && electron-builder --linux",
    "pack": "node build-launcher.js && vite build && electron-builder --dir"
  },
  "build": {
    "appId": "com.beacon.launcher",
    "productName": "Beacon Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  }
}
